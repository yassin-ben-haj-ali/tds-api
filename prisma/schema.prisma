generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  GESTIONNAIRE
  TECHNICIEN
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  mailAdress String    @unique
  role       Role
  password   String
  phone      String?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  articles   Article[]
}

model Article {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  number       String   @unique
  exportedAt   DateTime
  quantity     Int
  technicienId String   @db.ObjectId
  technicien   User     @relation(fields: [technicienId], references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
