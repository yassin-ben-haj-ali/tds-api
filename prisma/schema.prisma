generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  GESTIONNAIRE
  TECHNICIEN
}

enum ArticleStatus {
  STOCK
  PENDING
  COMPLETED
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  firstName  String
  lastName   String
  mailAdress String   @unique
  role       Role
  password   String
  phone      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Article {
  id         String        @id @default(auto()) @map("_id") @db.ObjectId
  number     String        @unique
  exportedAt DateTime
  quantity   Int
  status     ArticleStatus @default(STOCK)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model Fabriquant {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  name            String   @unique
  mailAdress      String   @unique
  adress          String
  telephoneNumber String
  countryCode     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
